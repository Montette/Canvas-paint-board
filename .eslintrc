{
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "rules": {
        "comma-dangle": "off",
        "linebreak-style": ["error", "windows"],
        "indent": ["error", 4],
        "no-unused-vars": ["error", { "vars": "local", "args": "none", "ignoreRestSiblings": false }],
        "arrow-parens": ["warn", "as-needed"],
        "no-return-assign": "off",
        "keyword-spacing": "off",
        "no-plusplus": "off"
    }
}